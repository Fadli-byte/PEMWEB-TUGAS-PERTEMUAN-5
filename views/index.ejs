<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Pengguna</title>
</head>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

:root {
  --primary-color: #4a90e2;
  --secondary-color: #50c878;
  --accent-color: #ff6b6b;
  --background-color: #f0f4f8;
  --text-color: #333;
}

body {
  font-family: 'Poppins', sans-serif;
  background-color: var(--background-color);
  color: var(--text-color);
  line-height: 1.6;
  margin: 0;
  padding: 20px;
  animation: gradientBG 15s ease infinite;
  background-size: 400% 400%;
  background-image: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
}

@keyframes gradientBG {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

h1, h2 {
  color: var(--primary-color);
  text-align: center;
  margin-bottom: 30px;
  animation: titlePop 1s ease-out;
}

@keyframes titlePop {
  0% {
    transform: scale(0.5);
    opacity: 0;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 30px;
  background-color: white;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
  animation: tableAppear 1s ease-in-out;
}

@keyframes tableAppear {
  0% {
    opacity: 0;
    transform: translateY(20px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

th, td {
  padding: 15px;
  text-align: left;
  border-bottom: 1px solid #ddd;
}

th {
  background-color: var(--primary-color);
  color: white;
  font-weight: 600;
  text-transform: uppercase;
}

tr:nth-child(even) {
  background-color: #f8f8f8;
}

tr:hover {
  background-color: #e6f3ff;
  transition: background-color 0.3s ease;
}

a {
  color: var(--accent-color);
  text-decoration: none;
  transition: color 0.3s ease;
}

a:hover {
  color: var(--primary-color);
  text-decoration: underline;
}

form {
  background-color: white;
  padding: 30px;
  border-radius: 8px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
  max-width: 500px;
  margin: 0 auto;
  animation: formSlideIn 1s ease-out;
}

@keyframes formSlideIn {
  0% {
    opacity: 0;
    transform: translateX(-50px);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

label {
  display: block;
  margin-bottom: 5px;
  color: var(--primary-color);
  font-weight: 600;
}

input[type="text"],
input[type="email"] {
  width: 100%;
  padding: 10px;
  margin-bottom: 20px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 16px;
}

button[type="submit"] {
  background-color: var(--secondary-color);
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 16px;
  transition: background-color 0.3s ease;
}

button[type="submit"]:hover {
  background-color: #45a049;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

/* Responsive design */
@media (max-width: 768px) {
  table {
    font-size: 14px;
  }
  
  th, td {
    padding: 10px;
  }
  
  form {
    padding: 20px;
  }
}
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

:root {
  --primary-color: #4a90e2;
  --secondary-color: #50c878;
  --accent-color: #ff6b6b;
  --background-color: #f0f4f8;
  --text-color: #333;
}

/* Existing styles remain the same */

/* New animation for "Daftar Pengguna" heading */
h1 {
  animation: slideIn 1s ease-out;
}

@keyframes slideIn {
  0% {
    transform: translateX(-100%);
    opacity: 0;
  }
  100% {
    transform: translateX(0);
    opacity: 1;
  }
}

/* New styles for Edit and Hapus links */
td a {
  display: inline-block;
  padding: 5px 10px;
  border-radius: 4px;
  transition: all 0.3s ease;
}

td a:first-child {
  background-color: var(--primary-color);
  color: white;
  animation: editPulse 2s infinite;
}

td a:last-child {
  background-color: var(--accent-color);
  color: white;
  animation: deletePulse 2s infinite;
}

@keyframes editPulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.7);
  }
}

@keyframes deletePulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 0 10px rgba(255, 107, 107, 0.7);
  }
}

/* Hover effects for Edit and Hapus links */
td a:first-child:hover {
  background-color: #3a7bc2;
  transform: translateY(-2px);
}

td a:last-child:hover {
  background-color: #ff5252;
  transform: translateY(-2px);
}

.notification {
    display: none;
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--secondary-color);
    color: white;
    padding: 15px 20px;
    border-radius: 5px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 1000;
    animation: fadeInOut 3s ease-in-out;
}

@keyframes fadeInOut {
    0%, 100% { opacity: 0; }
    10%, 90% { opacity: 1; }
}

</style>

<body>
    <h1>Daftar Pengguna</h1>
    <div class="notification" id="notification">Pengguna sudah ditambahkan!</div>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Nama</th>   
            <th>Email</th>
            <th>Telephone</th>
            <th>Aksi</th>
        </tr>
        <% users.forEach(pengguna => { %>
        <tr>
            <td><%= pengguna.id %></td>
            <td><%= pengguna.name %></td>
            <td><%= pengguna.email %></td>
            <td><%= pengguna.phone %></td>
            <td>
                <a href="#" onclick="confirmEdit('/Edit/<%= pengguna.id %>');" >Edit</a> |
                <a href="#" onclick="confirmDelete('/delete/<%= pengguna.id %>');">Hapus</a> 
            </td>
        </tr>
        <% }) %>
    </table>

    <h2>Tambah Pengguna Baru</h2>
    <form action="/add" method="post">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required><br>
    <label for="email">Email:</label>
    <input type="email" name="email" id="email"><br>
    <label for="phone">Telepon:</label>
    <input type="text" name="phone" id="phone"><br>
    <button type="submit">Tambah </button>



</form>
<script>
        function confirmDelete(url) {
            if (confirm('Apakah kamu yakin ingin menghapus data ini?')) {
                window.location.href = url;
            }
        }

        function confirmEdit(url) {
            if (confirm('Apakah kamu yakin ingin mengedit data ini?')) {
                window.location.href = url;
            }
        }

        document.getElementById('addUserForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Here you would typically send the form data to the server
    // For demonstration, we'll just show the notification
    showNotification();

    // Reset form fields
    this.reset();
});

function showNotification() {
    var notification = document.getElementById('notification');
    notification.style.display = 'block';
    setTimeout(function() {
        notification.style.display = 'none';
    }, 3000);
}

      
    </script>

</body>
</html>
